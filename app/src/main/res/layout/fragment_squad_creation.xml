<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/squad_bg_shape"
    android:padding="16dp">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squad Creation"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toStartOf="@+id/balance_container"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <LinearLayout
        android:id="@+id/balance_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAD: "
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.0"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Squad"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#66FFFFFF" />

            <!-- Choose Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Choose type"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/squad_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_7v7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7v7"
                    android:textColor="#AAAAAA"
                    android:buttonTint="#AAAAAA"/>

                <RadioButton
                    android:id="@+id/radio_5v5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5v5"
                    android:textColor="@color/orange"
                    android:buttonTint="@color/orange"
                    android:checked="true"/>
            </RadioGroup>

            <!-- Squad Slots -->
            <LinearLayout
                android:id="@+id/squad_slots_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <include layout="@layout/squad_slot_item" android:id="@+id/slot_1"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_2"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_3"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_4"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_5"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_6" android:visibility="gone"/>
                <include layout="@layout/squad_slot_item" android:id="@+id/slot_7" android:visibility="gone"/>
                
            </LinearLayout>

            <!-- Search Section -->
            <TextView
                android:id="@+id/squad_size_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Build your ultimate team. Add 4 more."
                android:textColor="#AAAAAA"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/search_player_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_field_outline"
                android:hint="Search players..."
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#66FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/selected_player_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Selected: "
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/player_search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_outline"
                android:padding="8dp" />

            <!-- Buttons -->
            <Button
                android:id="@+id/btn_add_selected_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/orange"
                android:text="Add Selected Player"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_create_squad_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/orange"
                android:text="Create Squad"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>