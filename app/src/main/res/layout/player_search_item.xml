<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/input_field_outline">

    <ImageView
        android:id="@+id/search_result_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/search_result_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/search_result_avatar"
        app:layout_constraintTop_toTopOf="@+id/search_result_avatar"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/search_result_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win rate 85% | Total matches 152"
        android:textColor="#AAAAAA"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/search_result_avatar"
        app:layout_constraintTop_toBottomOf="@+id/search_result_nickname"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/search_result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â— offline"
        android:textColor="@color/orange"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_add_search_result"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Add"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:background="@drawable/input_field_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>