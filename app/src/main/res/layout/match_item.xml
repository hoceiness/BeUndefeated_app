<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#1A1A24"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_field_outline"
        android:padding="16dp">

        <!-- Header: Category & Time/Slots -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_today"
                app:tint="#A0A0FF" />

            <TextView
                android:id="@+id/match_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category : Street"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/match_time_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 18:00   ● 2/10 slots"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game practice"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <!-- VS Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Team A -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                
                <ImageView
                    android:id="@+id/team_a_logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round"/>
                
                <TextView
                    android:id="@+id/team_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nickname"
                    android:textColor="#AAAAAA"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textColor="#AAAAAA"
                    android:textSize="8sp"/>
            </LinearLayout>

            <!-- VS Badge -->
            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/role_badge_background"
                android:backgroundTint="@color/orange"
                android:text="VS"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- Team B -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/team_b_logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round"/>

                <TextView
                    android:id="@+id/team_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nickname"
                    android:textColor="#AAAAAA"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textColor="#AAAAAA"
                    android:textSize="8sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Info Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/match_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 MAD\nPer Person"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:gravity="center"
                android:background="#22FFFFFF"
                android:padding="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/match_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Field\nBernabeu"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:gravity="center"
                android:background="#22FFFFFF"
                android:padding="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/match_format"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5V5\nFormat"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:gravity="center"
                android:background="#22FFFFFF"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_join_match"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Join Match"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:backgroundTint="@color/orange"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_see_details"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="See Details"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:backgroundTint="@color/orange"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>