<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/match_detai">

    <!-- Top Bar -->
    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="UNDEFEATED"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintEnd_toStartOf="@+id/balance_container"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/balance_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAD: "
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.0"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <Button
            android:id="@+id/tab_players"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Match Players"
            android:textSize="10sp"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/tab_statistics"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Statistics"
            android:textSize="10sp"
            android:backgroundTint="#333344"
            android:textColor="#AAAAAA"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/tab_leave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Leave Match"
            android:textSize="10sp"
            android:backgroundTint="#333344"
            android:textColor="#AAAAAA"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Team A Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_field_outline"
                android:padding="8dp">

                <!-- Left Side: Team Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A24">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#A0A0FF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team A"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Right Side: Player List -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_1"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_2"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_3"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_4"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_5"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_6" android:visibility="gone"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_a_slot_7" android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_join_team_a"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/orange"
                android:text="Join Team A"
                android:textColor="@android:color/white"
                android:textAllCaps="false"/>

            <!-- Team B Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_field_outline"
                android:padding="8dp"
                android:layout_marginTop="24dp">

                <!-- Left Side: Team Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A24">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#A0A0FF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team B"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Right Side: Player List -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_1"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_2"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_3"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_4"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_5"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_6" android:visibility="gone"/>
                    <include layout="@layout/squad_slot_item" android:id="@+id/team_b_slot_7" android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_join_team_b"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/orange"
                android:text="Join Team B"
                android:textColor="@android:color/white"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>